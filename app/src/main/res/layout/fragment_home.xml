                            android:textSize="13dp"
                            android:textColor="#828282"
                            android:layout_width="100dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/pacumulada"
                            android:background="@drawable/redondo_bordeamarillo"
                            android:gravity="center"
                            android:text="17.75%"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:textColor="#828282"
                            android:layout_width="80dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">

                        <TextView
                            android:gravity="center"
                            android:textAlignment="center"
                            android:text="Positivadad          del dia"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:textColor="#d96d89"
                            android:layout_width="100dp"
                            android:layout_height="30dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/pdiaria"
                            android:background="@drawable/redondo_borderojo"
                            android:gravity="center"
                            android:text="17.75%"
                            android:textStyle="bold"
                            android:textSize="13dp"
                            android:textColor="#d0355c"
                            android:layout_width="80dp"
                            android:layout_height="30dp"/>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
