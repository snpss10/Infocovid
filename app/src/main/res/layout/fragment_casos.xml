<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:layout_weight="0.25" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="0.33"
                android:gravity="center">

                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#003300"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:text="Recuperados"/>

                <TextView
                    android:gravity="center"
                    android:background="@drawable/esquinas_redondeadasverde"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/lrec"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="5 000"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:background="@drawable/rectangulo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:id="@+id/ldrec"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textColor="#003300"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:text="+ 150"/>

            </LinearLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#003300"
                android:textStyle="bold"
                android:textSize="18dp"
                android:textAlignment="center"
                android:text="Casos Activos"/>

            <TextView
                android:gravity="center"
                android:background="@drawable/esquinas_redondeadasamarrillo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/lca"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="6 000"/>

            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/rectangulo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ldca"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#003300"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="+ 450"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.33"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#003300"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="Fallecidos"/>

            <TextView
                android:gravity="center"
                android:background="@drawable/esquinas_redondeadasrojo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/lfalle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="150"/>

            <TextView
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/rectangulo"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:id="@+id/ldfalle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="#003300"
                android:textSize="20dp"
                android:textAlignment="center"
                android:text="+10"/>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:background="@drawable/esquinas_redondeadasnegro"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="R"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_height="35dp"/>
            <TextView
                android:id="@+id/lrange"
                android:background="@drawable/rectanguloblanco"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="1.55"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#333333"
                android:textAlignment="center"
                android:layout_width="70dp"
                android:layout_height="35dp"/>
            <ImageView
                android:src="@drawable/upgreen"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="1.55"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#333333"
                android:textAlignment="center"
                android:layout_width="40dp"
                android:layout_height="35dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.88"
            android:orientation="horizontal">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/Linechart1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.02"
            android:orientation="vertical"
            android:gravity="center">

        </LinearLayout>



    </LinearLayout>







</LinearLayout>